rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Basic Rules: Read Public, Write Admin Only ---

    // Portfolios: Everyone can read, Only Admin can write
    match /portfolios/{document=**} {
      allow read: if true;
      allow write: if request.auth != null; // Simple Auth Check (Refine if needed)
    }

    // Media Releases: Everyone can read, Only Admin can write
    match /media_releases/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Site Settings: Everyone can read, Only Admin can write
    match /site_settings/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Main Settings: Everyone can read, Only Admin can write
    match /main_settings/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Inquiries: Admin reads, Everyone writes (Create)
    match /inquiries/{document=**} {
      allow read: if request.auth != null;
      allow create: if true; // Public submission
      allow update, delete: if request.auth != null;
    }
    
    // Default Deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
